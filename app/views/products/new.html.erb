<%= form_with model: @product, local: true do |f|%>
    <%= f.label :name, 'Produto' %>
    <%= f.text_field :name %>
    <%= f.label :price, 'Preço'%>
    <%= f.number_field :price, min: 0%>
    <%= f.label :description, 'Descrição'%>
    <%= f.text_area :description%>
    <%= f.label :image, 'Imagem'%>
    <%= f.file_field :image%>
    <%= f.submit 'Enviar'%>
<% end %>